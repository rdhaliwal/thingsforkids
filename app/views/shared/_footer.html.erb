<footer id="footer">
  <div class="ct-footer--extended ct-u-paddingBoth60">
    <div class="container">
      <div class="row">
        <div class="col-sm-6 col-md-6 col-lg-3">
          <h4 class="text-uppercase ct-u-marginBottom30">ABOUT THINGS FOR KIDS</h4>
          <div class="ct-u-marginBottom30">
            <span>
              things for kids is an online kids activity directory designed with accessibility and usability in mind.
            </span>
          </div>

          <ul class="list-unstyled">
            <li class="ct-u-marginBottom10">
              <i class="fa fa-home"></i>
              <span class="ct-fw-600"></span>
              <span> Melbourne, Victoria, Australia</span>
            </li>
          </ul>
        </div>

        <div class="col-sm-6 col-md-6 col-lg-3">
          <h4 class="text-uppercase ct-u-marginBottom30">Contact us</h4>

          <ul class="list-unstyled ct-phoneNumbers ct-u-marginBottom30">
            <li>
              <i class="fa fa-phone"></i>
              <span class="ct-fw-600">0432 393 572</span>
            </li>
          </ul>

          <ul class="ct-panel--socials ct-panel--navbar list-inline list-unstyled ct-u-marginBottom30">
            <li>
              <%= link_to facebook_url, target: '_blank' do %>
                <div class="ct-socials ct-socials--circle">
                  <i class="fa fa-facebook"></i>
                </div>
              <% end %>
            </li>

            <li>
              <%= link_to instagram_url, target: '_blank' do %>
                <div class="ct-socials ct-socials--circle">
                  <i class="fa fa-instagram"></i>
                </div>
              <% end %>
            </li>
          </ul>

          <div class="ct-contactList ">
            <a><i class="fa fa-envelope-o"></i>hello@thingsforkids.com.au</a>
          </div>
        </div>

        <div class="col-sm-6 col-md-6 col-lg-3 ">
          <h4 class="text-uppercase ct-u-marginBottom30">Quick links</h4>
          <div class="row">
            <div class="ct-links">
              <div class="col-md-6">
                <%= link_to "Pricing", pricing_path, class: "text-capitalize" %>
                <%= link_to "About us", about_us_path, class: "text-capitalize" %>
                <%= link_to "Contact Us", contact_us_path, class: "text-capitalize" %>
                <%= link_to "Register", new_user_registration_path, class: "text-capitalize" %>
                <%= link_to "Login", new_user_session_path, class: "text-capitalize" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="ct-postFooter ct-u-paddingBoth20">
    <a href="#" class="ct-scrollUpButton ct-js-btnScrollUp">
     <span class="ct-sectioButton--square">
        <i class="fa fa-angle-double-up"></i>
     </span>
    </a>

    <div class="container">
      <div class="row">
        <div class="col-sm-6 col-md-6 col-sm-push-6">
          <div class="ct-newsletter text-right">
            <span class="text-uppercase ct-u-text--white ct-fw-600">Join our newsletter</span>
            <%= form_tag(subscribe_path, class: 'join-waitlist-form') do %>
              <%= email_field_tag(:email, nil, class: 'form-control input-lg', placeholder: 'Your email address', required: true) %>
              <%= submit_tag "Subscribe", class: "btn btn-primary btn-transparent--border ct-u-text--motive text-capitalize" %>
            <% end %>
          </div>
        </div>

        <div class="col-sm-6 col-md-6 col-sm-pull-6">
          <span class="ct-copyright">&copy; 2018 Things for Kids. All rights reserved</span>
        </div>
      </div>
    </div>
  </div>
</footer>
