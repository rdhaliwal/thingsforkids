<div id="navbar">
  <div class="ct-navbarMobile">
    <button type="button" class="navbar-toggle">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag 'logo.png', alt: 'logo' %>
    <% end %>
    <button type="button" class="searchForm-toggle">
      <span class="sr-only">Toggle navigation</span>
      <span><i class="fa fa-search"></i></span>
    </button>
  </div>

  <nav class="navbar yamm ct-navbar--noDecoration" role="navigation" data-heighttopbar="40px" data-startnavbar="0">
    <div class="container ct-u-margin0">
      <div class="navbar-header ct-panel--navbar">
        <%= link_to root_path do %>
          <%= image_tag 'logo.png', alt: 'logo' %>
        <% end %>
      </div>
      <div class="ct-panelBox">
        <ul class="ct-panel--socials ct-panel--navbar list-inline list-unstyled">
          <li>
            <%= link_to facebook_url, target: '_blank' do %>
              <div class="ct-socials ct-socials--circle">
                <i class="fa fa-facebook"></i>
              </div>
              <% end %>
            </li>

            <li>
              <%= link_to instagram_url, target: '_blank' do %>
                <div class="ct-socials ct-socials--circle">
                  <i class="fa fa-instagram"></i>
                </div>
              <% end %>
            </li>
          </ul>
      </div>

      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav ct-navbar--fadeInUp">
          <li class="dropdown active"><%= link_to "Home", root_path %></li>
          <li class="dropdown"><%= link_to "Add a listing", pricing_my_listings_path %></li>
          <li class="dropdown"><%= link_to "About us", "#" %></li>
          <li class="dropdown"><%= link_to "Contact Us", contact_us_path %></li>
          <% if user_signed_in? %>
            <li class="dropdown">
              <a>Account<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "#{current_user.email}", edit_user_path(current_user) %></li>
                <li><%= link_to "My Listings", my_listings_path %></li>
                <li><%= link_to "Change Password", edit_user_path(current_user) %></li>
                <li><%= link_to "Log Out",  destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li class="dropdown">
              <%= link_to new_user_session_path do %>
                <i class="fa fa-user"></i> Login
              <% end %>
            </li>

            <li class="dropdown">
              <%= link_to new_user_registration_path do %>
                <i class="fa fa-plus-square"></i> Register
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>

      <div class="ct-shapeBottom"></div>
    </div>
  </nav>
</div>
