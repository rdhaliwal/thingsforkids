<div id="navbar">
  <div class="ct-navbarMobile">
    <button type="button" class="navbar-toggle">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag 'logo.png', alt: 'logo' %>
    <% end %>
    <button type="button" class="searchForm-toggle">
      <span class="sr-only">Toggle navigation</span>
      <span><i class="fa fa-search"></i></span>
    </button>
  </div>

  <nav class="navbar yamm ct-navbar--noDecoration" role="navigation" data-heighttopbar="40px" data-startnavbar="0">
    <div class="container ct-u-margin0">
      <div class="navbar-header ct-panel--navbar">
        <%= link_to root_path do %>
          <%= image_tag 'logo.png', alt: 'logo' %>
        <% end %>
      </div>
      <div class="ct-panelBox">
        <ul class="ct-panel--socials ct-panel--navbar list-inline list-unstyled">
          <li>
            <%= link_to '', target: '_blank' do %>
              <div class="ct-socials ct-socials--circle">
                <i class="fa fa-facebook"></i>
              </div>
              <% end %>
            </li>

            <li>
              <%= link_to '#', target: '_blank' do %>
                <div class="ct-socials ct-socials--circle">
                  <i class="fa fa-instagram"></i>
                </div>
              <% end %>
            </li>
          </ul>
      </div>

      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav ct-navbar--fadeInUp">
          <li class="dropdown active"><%= link_to "Home", root_path %></li>
          <li class="dropdown"><%= link_to "Add a listing", root_path %></li>
          <li class="dropdown"><%= link_to "About us", "#" %></li>
          <li class="dropdown"><%= link_to "Contact Us", "#" %></li>
        </ul>
      </div>

      <div class="ct-shapeBottom"></div>
    </div>
  </nav>
</div>
