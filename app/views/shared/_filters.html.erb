<%= search_form_for @q, url: root_path, html: { class: css_class, role: "form" } do |f| %>
  <div class="form-group mt-40">
    <div class="ct-u-displayTableVertical ct-u-marginBottom20">
      <div class="row">
        <div class="col-md-12">
          <div class="ct-u-displayTableCell">
            <div class="col-md-8 text-center">
              <div class="ct-u-displayTableCell">
                <label id="range" style="border:0; color:#f6931f; font-weight:bold;"><%= range(params[:age]) %></label>
                <div id="age_range" class="slider-range" data-min="<%= min_age_range(params[:age]) %>" data-max="<%= max_age_range(params[:age]) %>"></div>
                <label class="text-center center-block">Age range</label>
                <%= hidden_field_tag "age[min_age]", min_age_range(params[:age]), { class: "min-age" } %>
                <%= hidden_field_tag "age[max_age]", max_age_range(params[:age]), { class: "max-age" } %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <%= label_tag "Activity Type" %>
        </div>
      </div>

      <% Listing.activity_types.each do |key, value| %>
        <div class="row">
          <div class="checkbox">
            <label>
              <%= f.check_box "activity_type_in", { class: "activity-check", include_hidden: false, multiple: true }, value %>
              <%= key %>
            </label>
          </div>
        </div>
      <% end %>
      <hr>

      <div class="row">
        <div class="col-md-12">
          <%= label_tag "Available Days" %>
        </div>
      </div>

      <% Listing::WEEK_DAYS.each do |day| %>
        <div class="row">
          <div class="checkbox">
            <label>
              <%= check_box_tag "days_available[]", day, days_filter_checked?(day, params[:days_available]), { class: "activity-check", include_hidden: false, multiple: true } %>
              <%= day %>
            </label>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
