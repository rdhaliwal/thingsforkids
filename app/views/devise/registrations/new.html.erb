<header class="ct-mediaSection" data-stellar-background-ratio="0.3" data-height="630" data-type="parallax" data-bg-image=<%= asset_url("content/registration-parallax.jpg") %> data-bg-image-mobile=<%= asset_url("content/registration-parallax.jpg") %> id="signup-form">
  <div class="ct-mediaSection-inner">
    <div class="container mt-40">
      <div class="row">
        <div class="col-md-5">
          <div class="ct-headerText--normal">
            <h2 class="text-uppercase ct-fw-600 ct-u-marginBottom70">
              Why
              <span class="ct-u-text--motive">
                register?
              </span>
            </h2>
          </div>

          <div class="ct-iconBox ct-u-marginBottom40 ct-iconBox--2col">
            <div class="ct-icon text-center ct-iconContainer--circle ct-iconContainer--circleHoverLight">
              <i class="fa fa-users"></i>
            </div>

            <div class="ct-iconBox--description">
              <span class="ct-title text-uppercase ct-fw-600">
                Create listings for free
              </span>

              <span class="ct-text">
                Add basic listings for all of your locations at no cost.
              </span>
            </div>
          </div>

          <div class="ct-iconBox ct-u-marginBottom40 ct-iconBox--2col">
            <div class="ct-icon text-center ct-iconContainer--circle ct-iconContainer--circleHoverLight">
              <i class="fa fa-bolt"></i>
            </div>

            <div class="ct-iconBox--description">
              <span class="ct-title text-uppercase ct-fw-600">
                Get more exposure with Premium listings
              </span>

              <span class="ct-text">
                Get a photo gallery, long description and more
              </span>
            </div>
          </div>

          <div class="ct-iconBox ct-iconBox--2col">
            <div class="ct-icon text-center ct-iconContainer--circle ct-iconContainer--circleHoverLight">
              <i class="fa fa-trophy"></i>
            </div>

            <div class="ct-iconBox--description">
              <span class="ct-title text-uppercase ct-fw-600">
                Manage your listings
              </span>

              <span class="ct-text">
                Update details easily to stay current.
              </span>
            </div>
          </div>
        </div>

        <div class="col-md-7">
          <div class="error-message pull-right">
            <%= devise_error_messages! %>
          </div>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "ct-formRegister pull-right" }) do |f| %>
            <div class="form-group">
              <div class="ct-form--label--type2">
                <div class="ct-u-displayTableVertical">
                  <div class="ct-u-displayTableCell">
                    <div class="ct-input-group-btn">
                      <button class="btn btn-primary">
                        <i class="fa fa-user"></i>
                      </button>
                    </div>
                  </div>

                  <div class="ct-u-displayTableCell text-center">
                    <span class="text-uppercase">Register with us</span>
                  </div>
                </div>
              </div>

              <div class="ct-form--item ct-u-marginBottom20">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control input-lg" %>
              </div>

              <div class="ct-form--item ct-u-marginBottom20">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg" %>
              </div>

              <div class="ct-form--item ct-u-marginBottom20">
                <%= render "devise/shared/links" %>
              </div>

              <div class="ct-form--item">
                <%= f.submit "Sign up", class: "btn btn-warning center-block" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</header>
