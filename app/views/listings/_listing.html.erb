<div class="col-xs-12 col-sm-4 col-md-6">
  <div class="ct-itemProducts ct-u-marginBottom30 ct-hover product-width" id="list-<%= listing.id %>">
    <%= link_to listing, class: 'list-container' do %>
      <div class="ct-main-content list-height">
        <div class="ct-imageBox">
          <%= render_logo listing.logo if listing.premium? %>
          <i class="fa fa-eye"></i>
        </div>

        <div class="ct-main-text">
          <div class="ct-product--tilte">
            <i class="<%= icon_class get_activity_type_value(listing.activity_type) %>"></i>
            <div class="<%= title_color get_activity_type_value(listing.activity_type) %> listing-title">
              <%= listing.business_name %>
            </div>
          </div>

          <div class="ct-product--description">
            <%= truncate_short_description listing %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
