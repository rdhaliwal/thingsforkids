<%= render 'my_listings/build_listings/form_header' %>
<section class="ct-u-paddingTop50 ct-u-paddingBottom100">
  <div class="container">
    <%= form_for @listing , html: { role: "form", class: "ct-formSubmission", id: "paid_listing_form" } do |f| %>

      <%= f.hidden_field :listing_type, value: :premium %>
      <%= f.hidden_field :status, value: :active %>

      <div>
        <div class="ct-headerText--normal text-uppercase ct-u-marginBottom40">
          <h2>Upgrade your listing<br>
            <span class="ct-text--highlightGray">Images & credit card</span>
          </h2>
        </div>

        <div class="row">
          <%= render 'my_listings/images_form_fields', f: f %>
        </div>
      </div>
    <% end %>
  </div>
</section>
