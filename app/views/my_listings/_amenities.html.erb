<div class="hide-form" id="amenities-form">
  <div class="ct-headerText--normal text-uppercase ct-u-marginBottom40">
    <h2>Step 2 <span class="ct-text--highlightGray">Price & Amenities</span></h2>
  </div>

  <div class="row">
    <div class="col-md-6 col-lg-6">
      <div class="form-group ">
        <%= f.label :price, "Set price of your property", class: "ct-fw-600 text-uppercase ct-u-marginBottom10"%>
        <div class="row">
          <div class="col-md-9">
            <%= f.number_field :price, class: "form-control input-lg ct-input--border ct-u-marginBottom20" %>
          </div>
        </div>
        <label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Property summary</label><br>
        <label class="ct-fw-600 text-uppercase ct-u-marginBottom20">Amenites <span>Please check what applies</span></label>
        <div class="ct-u-displayTable ct-radio--items ct-u-marginBottom40">
          <div class="ct-u-displayTableCell">
            <div class="ct-checbox--custom">
              <%= f.check_box :indoors, id: "ct-checbox--custom" %>
              <label for="ct-checbox--custom"></label>
              <span> Indoors</span>
            </div>

            <div class="ct-checbox--custom">
              <%= f.check_box :outdoors, id: "ct-checbox--custom2" %>
              <label for="ct-checbox--custom2"></label>
              <span> Outdoors</span>
            </div>

            <div class="ct-checbox--custom">
              <%= f.check_box :disability_access, id: "ct-checbox--custom3" %>
              <label for="ct-checbox--custom3"></label>
              <span> Disability Access</span>
            </div>

            <div class="ct-checbox--custom">
              <%= f.check_box :parking, id: "ct-checbox--custom4" %>
              <label for="ct-checbox--custom4"></label>
              <span> Parking</span>
            </div>
          </div>

          <div class="ct-u-displayTableCell ct-radio--items">
            <div class="ct-checbox--custom">
              <%= f.check_box :free_trial, id: "ct-checbox--custom5" %>
              <label for="ct-checbox--custom5"></label>
              <span> Free Trial</span>
            </div>

            <div class="ct-checbox--custom">
              <%= f.check_box :undercover, id: "ct-checbox--custom6" %>
              <label for="ct-checbox--custom6"></label>
              <span> Undercover</span>
            </div>

            <div class="ct-checbox--custom">
              <%= f.check_box :bbq, id: "ct-checbox--custom7" %>
              <label for="ct-checbox--custom7"></label>
              <span> BBQ</span>
            </div>

            <div class="ct-checbox--custom">
              <%= f.check_box :toilets, id: "ct-checbox--custom8" %>
              <label for="ct-checbox--custom8"></label>
              <span> Toilets</span>
            </div>
          </div>

          <div class="ct-u-displayTableCell ct-radio--items">
            <div class="ct-checbox--custom">
              <%= f.check_box :highchairs, id: "ct-checbox--custom9" %>
              <label for="ct-checbox--custom9"></label>
              <span> Highchairs</span>
            </div>

            <div class="ct-checbox--custom">
              <%= f.check_box :baby_change_room, id: "ct-checbox--custom10" %>
              <label for="ct-checbox--custom10"></label>
              <span> Baby Change Room</span>
            </div>

            <div class="ct-checbox--custom">
              <%= f.check_box :parties, id: "ct-checbox--custom11" %>
              <label for="ct-checbox--custom11"></label>
              <span> Parties</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-lg-6">
      <div class="form-group">
        <label class="ct-fw-600 text-uppercase ct-u-marginBottom20">Available days <span>Please check what applies</span></label>
        <div class="ct-u-displayTable ct-radio--items ct-u-marginBottom40">
          <div class="ct-u-displayTableCell">
            <% Listing::WEEK_DAYS.each do |day| %>
              <div class="ct-checbox--custom">
                <%= check_box_tag "listing[days_available][]", day, nil, { id: "#{day}" } %>
                <label for="<%= day %>"></label>
                <span> <%= day %></span>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <% if params[:type] == "free" %>
        <div class="row">
          <div class="col-md-12">
            <div class="ct-container--Big">
              <%= link_to "Back to Step 1", "", class: "btn btn-link pull-left", id: "backto-step1-free" %>
              <%= f.submit "Submit My Property", class: "btn btn-success pull-right" %>
              <div class="clearfix"></div>
            </div>
          </div>
        </div>
      <% else %>
        <div class="ct-container--Big">
          <%= link_to "Back to Step 1", "", class: "btn btn-link pull-left", id: "backto-step1" %>
          <%= link_to "Continue to Step 3", "", class: "btn btn-warning pull-right", id: "continue-step3" %>
          <div class="clearfix"></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
