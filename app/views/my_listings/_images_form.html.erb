<div id="images-form" class="hide-form">
  <div class="ct-headerText--normal text-uppercase ct-u-marginBottom40">
    <h2>Step 3 <span class="ct-text--highlightGray">Add images</span>
    </h2>
  </div>
  <div class="row">
    <div class="col-md-8 col-lg-6">
      <div class="form-group ">
        <label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Upload featured images</label>
        <ul class="list-unstyled ct-productBox--thumbnail ct-u-marginBottom50">
          <% 8.times do |img| %>
            <li>
              <div class="col-sm-6 col-md-8">
                <%= f.file_field :images, { name: "listing[images][]", id: "img-#{img}", class: "images ct-media--content" }  %>
              </div>

              <div class="ct-media--left">
                <%= image_tag "content/gallery-thumbnail-1.jpg", alt: "", id: "image_tag-#{img}" %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="col-md-4 col-lg-6">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :facbook_url, class: "ct-fw-600 text-uppercase ct-u-marginBottom10" %>
          <%= f.text_field :facbook_url, class: "form-control input-lg ct-input--border ct-u-marginBottom40" %>
        </div>
      </div>

      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :instagram_url, class: "ct-fw-600 text-uppercase ct-u-marginBottom10" %>
          <%= f.text_field :instagram_url, class: "form-control input-lg ct-input--border ct-u-marginBottom40" %>
        </div>
      </div>

      <div class="col-md-12 ct-container--Big">
        <%= link_to "Back to Step 2", "", class: "btn btn-link pull-left", id: "backto-step2" %>
        <%= link_to "Continue to Step 4", "", class: "btn btn-warning pull-right", id: "continue-step4" %>
        <div class="clearfix"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :js_init do %>
  MyListings.init();
<% end %>
