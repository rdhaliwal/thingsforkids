<%= render 'form_header' %>
<section class="ct-u-paddingTop50 ct-u-paddingBottom100">
  <div class="container">
    <%= form_for @listing, url: wizard_path, method: :put, html: { role: "form", class: "ct-formSubmission", id: listing_form_id(params[:type]) } do |f| %>

      <%= hidden_field_tag :type, params[:type] %>

      <div id="info-form">
        <div class="ct-headerText--normal text-uppercase ct-u-marginBottom40">
          <h2>Step 1<br>
            <span class="ct-text--highlightGray">Description & Address</span>
          </h2>
        </div>

        <div class="row">
          <%= render 'my_listings/basic_info_fields', f: f %>
        </div>
      </div>
    <% end %>
  </div>
</section>

<% content_for :js_init do %>
  MyListings.init();
<% end %>
