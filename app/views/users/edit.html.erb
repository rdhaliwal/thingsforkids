<header class="ct-mediaSection" data-stellar-background-ratio="0.3" data-height="630" data-type="parallax" data-bg-image=<%= asset_url("content/registration-parallax.jpg") %> data-bg-image-mobile=<%= asset_url("content/registration-parallax.jpg") %>>
  <div class="ct-mediaSection-inner">
    <div class="container">
      <div class="col-md-8">
        <%= form_for @user, html: { class: "ct-formRegister pull-right" } do |f| %>
          <div class="form-group">
            <div class="ct-form--label--type2">
              <div class="ct-u-displayTableVertical">
                <div class="ct-u-displayTableCell">
                  <div class="ct-input-group-btn">
                    <button class="btn btn-primary">
                      <i class="fa fa-user"></i>
                    </button>
                  </div>
                </div>

                <div class="ct-u-displayTableCell text-center">
                  <span class="text-uppercase">Change Password</span>
                </div>
              </div>
            </div>

            <div class="ct-form--item ct-u-marginBottom20">
              <%= f.label :email %><br />
              <%= f.email_field :email, readonly: true, class: "form-control input-lg" %>
            </div>

            <div class="ct-form--item ct-u-marginBottom20">
              <%= f.label :password, "New Password" %><br />
              <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg" %>
            </div>

            <div class="ct-form--item ct-u-marginBottom20">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg" %>
            </div>

            <div class="ct-form--item">
              <%= f.submit "Update password", class: "btn btn-warning center-block" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</header>
